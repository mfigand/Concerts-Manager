
<% if @concert.errors.any? %>
  <ul class="notification is-danger">
    <button class="delete"></button>
    <% @concert.errors.full_messages.each do |error| %>
     <li><%= error %> </li>
    <% end %>
  </ul>
<% end%>


<%= form_for [@concert] do |f| %>
  <%= f.label :artist %>
  <%= f.text_field :artist, class:"control input" %>
  <br>
  <%= f.label :venue %>
  <%= f.text_field :venue, class:"control input"  %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city, class:"control input" %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price, step: 0.5, class:"control input"  %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description, class:"control input" %>
  <br>
  <%= f.label :date %>
  <%= f.datetime_select :date, size: 10, class:"control input"  %>
  <br>
  <br>

  <%= f.submit 'Save' %>

<% end %>
<br>
<%= link_to("Back to concerts", concerts_path) %>
